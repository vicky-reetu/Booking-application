<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Movie Tikcets</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link rel ="stylesheet" href="style.css"/>
  </head>
  <body>
    <div style="margin: 20px; text-align:center; ">
      <h1 style="color: chocolate; font-size:55px">Siri Mutliplex</h1>
    </div>
  <div class="container" style="display:flex; align-items:center;  justify-content:center; margin-top:15px;color:darkslategrey">
    <div >
      <label>Select cinema:</label>
      <select class="form-control" id="movie" style="width: 400px;">
      {{#each movies}}
       <option value="{{rate}}" style="border-color: blueviolet;">Cinema name: {{name}} - Screen No: {{screenNo}} - Rs.{{rate}}-/</option> 
     {{!-- <option value="150">Cinema name: RRR - Screen No 1 - Rs.130-/</option>  --}}
      {{/each}}
      </select>
    </div>
    <ul class="showcase" style="list-style-type: none; margin:50px; margin-top:100px ">
      <li style="text-align: center;">
        <div class="seat" style="margin: 15px;"></div>
        <small>Available</small>
      </li>
      <li style="text-align: center;">
        <div class="seat selected" style="margin: 15px;"></div>
        <small>Selected</small>
      </li>
      <li style="text-align: center;">
        <div class="seat occupied" style="margin: 15px;"></div>
        <small>Occupied</small>
      </li>
    </ul>

    <div style="width: 330px; " >
        <div class="screen"></div>
        <div class="row" id="screen1" style="visibility: hidden; display:none; ">
        {{#each screen1 }}
        <div class="seat {{status}}" id="{{seatno}}"></div>
        {{/each}}
      </div>

      <div class="row" id="screen2" style="visibility: hidden; display:none;">
        {{#each screen2 }}
        <div class="seat {{status}}" id="{{seatno}}"></div>
        {{/each}}
      </div>

      <div class="row" id="screen3" style="visibility: hidden; display:none;">
        {{#each screen3 }}
        <div class="seat {{status}}" id="{{seatno}}"></div>
        {{/each}}
      </div>
  </div>
  </div>
  <div id="finalCost" style="displya:none; visibility:hidden; text-align:center">
    <p id="cost"></p>
    <script src="script.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.8/dist/umd/popper.min.js" integrity="sha384-I7E8VVD/ismYTF4hNIPjVp/Zjvgyol6VFvRkX/vR+Vc4jQkC+hVqc2pM8ODewa9r" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.min.js" integrity="sha384-0pUGZvbkm6XF6gxjEnlmuGrJXVbNuzT9qBBavbLwCsOGabYfZo0T0to5eqruptLy" crossorigin="anonymous"></script>  
</body>
</html>